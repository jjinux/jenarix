
# python class emulation

entity(_E, null, null, 
  { __init__:lambda self,x: [set(self.x,x) , output("constructing")],
    __del__ :lambda self: output("destructing" ) },
  __del__, __init__)

# construct using the "new" builtin function

a = new(_E, 1)

