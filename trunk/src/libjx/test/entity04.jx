
# experimenting with dot notation for calling methods on entity
# instances (this will be particularly useful for pseudo-Python)

(entity A null null {class_fn:(lambda [self] ("from class",(get (self 1) 2)))});

(set b [A, [1,2,3] ,{inst_fn:(lambda [self] ("from instance",(get (self 1) 2)))}]);

# the pseudo-LISP way

(b inst_fn);

(b class_fn);

# the pseudo-Python way

(b.inst_fn);

(b.class_fn);


